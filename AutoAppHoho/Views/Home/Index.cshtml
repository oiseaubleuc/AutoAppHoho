@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<AutoAppHoho.Resources.SharedResource> Localizer
@model IEnumerable<AutoAppHoho.Models.Car>

<div class="container mt-5">
    <h1 class="text-center">@Localizer["WelcomeMessage"]</h1>

    <div class="text-center">
        <img src="~/uploads/luxury.png" class="img-fluid rounded shadow" alt="Auto Markt">
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Car" asp-action="Index" class="btn btn-lg btn-primary">
            @Localizer["ViewAllListings"]
        </a>
        <button class="btn btn-secondary">
            @Localizer["ViewSiteStatistics"]
        </button>
    </div>

    <h2 class="mt-5">@Localizer["LatestPosts"]</h2>
    <div class="row">
        @foreach (var car in Model.Take(5))
        {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@car.Name</h5>
                        <p class="card-text">
                            @car.Price.ToString("C", System.Globalization.CultureInfo.CurrentCulture)
                        </p>
                        <a asp-controller="Car" asp-action="Details" asp-route-id="@car.Id" class="btn btn-info w-100">
                            @Localizer["ViewMore"]
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
