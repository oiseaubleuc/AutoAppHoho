@model AutoAppHoho.Models.Car

<div class="container mt-5">
    <h2>@Model.Name</h2>
    <p class="text-muted">Gepubliceerd op: @DateTime.Now.ToString("dd/MM/yyyy")</p>

    <div class="row">
        <!-- Grote afbeelding -->
        <div class="col-md-6">
            <img src="@Model.ImagePath" class="img-fluid rounded shadow-lg" alt="Auto afbeelding">
        </div>

        <!-- Auto details -->
        <div class="col-md-6">
            <h4 class="text-secondary">@Model.Price.ToString("C")</h4>
            <p><strong>Brandstoftype:</strong> @Model.FuelType?.Name</p>
            <p><strong>Categorie:</strong> @Model.Category?.Name</p>
            <p><strong>Locatie:</strong> @Model.Location</p>
            <p><strong>Weergaven:</strong> @Model.Views</p>
        </div>
    </div>

    <hr>

    <!-- Extra details -->
    <h4 class="mt-4">Auto Extra's</h4>
    <ul>
        <li>ABS, ESP, Airbags</li>
        <li>Bluetooth, Cruise Control, Navigatie</li>
        <li>Lederen stoelen, Verwarmde stoelen</li>
    </ul>

    <a asp-action="Index" class="btn btn-secondary">Terug naar lijst</a>
</div>
