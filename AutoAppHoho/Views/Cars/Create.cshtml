@model AutoAppHoho.Models.Car

@{
    ViewData["Title"] = "Auto Toevoegen";
}

<div class="container mt-5">
    <h1>Auto Toevoegen</h1>
    <hr />
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label for="Name">Naam</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Price">Prijs</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="FuelTypeId">Brandstoftype</label>
            <select asp-for="FuelTypeId" asp-items="ViewBag.FuelTypes" class="form-select"></select>
            <span asp-validation-for="FuelTypeId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="CategoryId">Categorie</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="image">Afbeelding uploaden</label>
            <input type="file" name="image" class="form-control" />
        </div>

       

        <div class="form-check mb-3">
            <input asp-for="IsDeleted" class="form-check-input" />
            <label class="form-check-label" asp-for="IsDeleted">Gedeactiveerd</label>
        </div>

        <button type="submit" class="btn btn-primary">Opslaan</button>
        <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
    </form>
</div>
