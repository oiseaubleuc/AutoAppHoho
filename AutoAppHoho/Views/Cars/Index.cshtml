@model IEnumerable<AutoAppHoho.Models.Car>

@{
    ViewData["Title"] = "Auto Lijst";
}

<div class="container mt-4">
    <h2 class="mb-3">Auto's Beheren</h2>

    <form asp-action="Index" method="get" class="mb-3 d-flex">
        <input type="text" name="search" value="@Context.Request.Query["search"]" class="form-control me-2" placeholder="Zoek op naam of brandstof..." />
        <button type="submit" class="btn btn-primary">Zoeken</button>
    </form>

    <a asp-action="Create" class="btn btn-success mb-3">+ Nieuwe Auto Toevoegen</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]">Naam</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSort"]">Prijs</a>
                </th>
                <th>Brandstoftype</th>
                <th>Categorie</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Geen auto's gevonden.</td>
                </tr>
            }
            else
            {
                @foreach (var car in Model)
                {
                    <tr>
                        <td>@car.Name</td>
                        <td>€ @car.Price.ToString("N2")</td>
                        <td>@car.FuelType.Name</td>
                        <td>@car.Category.Name</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning btn-sm">Bewerken</a>
                            <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger btn-sm">Verwijderen</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
