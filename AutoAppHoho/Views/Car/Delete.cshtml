@model AutoAppHoho.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h2>Are you sure you want to delete this car?</h2>

<div>
    <h3>@Model.Name</h3>
    <p>Price: @Model.Price €</p>
    <p>Fuel Type: @Model.FuelType.Name</p>
    <p>Category: @Model.Category.Name</p>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" alt="Car Image" width="150" />
    }

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
