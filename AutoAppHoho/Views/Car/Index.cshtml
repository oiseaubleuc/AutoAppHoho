@model IEnumerable<AutoAppHoho.Models.Car>

@{
    ViewData["Title"] = "Alle Auto's";
}

<h2 class="text-center">Alle posts</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <label for="sortDropdown">Sort by:</label>
        <select id="sortDropdown" class="form-select w-auto">
            <option value="newest">Post created (newest first)</option>
            <option value="oldest">Post created (oldest first)</option>
            <option value="price_high">Price (highest first)</option>
            <option value="price_low">Price (lowest first)</option>
        </select>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var car in Model)
    {
        <div class="col">
            <div class="card shadow-sm">
                <img src="@car.ImagePath" class="card-img-top" alt="@car.Name">
                <div class="card-body">
                    <h5 class="card-title">@car.Name</h5>
                    <span class="badge bg-warning text-dark">€@car.Price</span>
                    <p class="card-text mt-2">
                        <small>@car.Description.Substring(0, Math.Min(100, car.Description.Length))...</small>
                    </p>
                    <p class="text-muted">
                        <small>@car.Location</small>
                    </p>
                    <a class="btn btn-dark w-100" asp-action="Details" asp-route-id="@car.Id">View more</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card img {
        height: 200px;
        object-fit: cover;
    }
    .badge {
        font-size: 1rem;
        padding: 5px 10px;
    }
</style>
